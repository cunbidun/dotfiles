#!/bin/bash

if [ -z "$1" ]; then
	echo "No argument supplied"
	exit 1
fi

if [ "$1" -lt 1 ] || [ "$1" -gt 9 ]; then
	echo "Space out of range"
	exit 2
fi

space=$1
display=$(yabai -m query --spaces --space | jq .display)
compute_space=$(((display - 1) * 9 + space))

yabai -m space --focus $compute_space
