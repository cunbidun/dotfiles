#!/bin/bash

case $BLOCK_BUTTON in
1) set_language ;;
6) "$TERMINAL" -t "editdwmblock" -o "window.dimensions.columns=160" -o "window.dimensions.lines=40" -e "$EDITOR" "$0" ;;
esac

EN_ibus="xkb:us::eng"
VN_ibus="Bamboo"
lang=$(ibus engine)

if [ "$lang" = "$EN_ibus" ]; then
	echo "^c#81A1C1^EN^d^"
fi
if [ "$lang" = "$VN_ibus" ]; then
	echo "^c#EBCB8B^VI^d^"
fi
