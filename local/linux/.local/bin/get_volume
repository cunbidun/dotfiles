#!/bin/sh

case $BLOCK_BUTTON in
1) sc_audio_config ;;
6) "$TERMINAL" -t "editdwmblock" -o "window.dimensions.columns=160" -o "window.dimensions.lines=40" -e "$EDITOR" "$0" ;;
esac

if [ "$(pamixer --get-mute)" = true ]; then
	icon="^c#BF616A^"
fi

vol="$(pamixer --get-volume)"

echo "^c#81A1C1^VOL: ^d^$icon$vol%^d^"
