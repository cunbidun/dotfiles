#!/bin/bash
#
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
COLORS_FILE="$DIR/colors-name.txt"

main() {
	if [ -z "$PICKER" ]; then
		notify-send "Nord file picker" "$PICKER env not defined. Set to [dmenu, wofi]"
		exit 0
	fi
	if [ "$PICKER" == 'dmenu' ]; then
		picker=rofi
		args='-dmenu -i -markup-rows'
		clipboard_command="xclip -selection clipboard"
	fi
	if [ "$PICKER" == 'wofi' ]; then
		picker=wofi
		args='-d -m -L 18'
		clipboard_command=wl-copy
	fi
	selected="$($picker $args -p Colors <"$COLORS_FILE")"

	# Exit if nothing is selected
	[[ -z $selected ]] && exit 1

	# get first xml tag
	echo -n "$(echo "$selected" | cut -d\' -f2)" | $clipboard_command
}

main "${@}"
