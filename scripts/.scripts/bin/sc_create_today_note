#!/bin/sh

BASE_DIR="$HOME/note"
NOTE_DIR="$BASE_DIR/note"
TEMPLATE_DIR="$BASE_DIR/template"

mkdir -p "$NOTE_DIR"

today=$(date +"%Y %B %d")
path="$NOTE_DIR/$(echo "$today" | sed 's/ /\//g')"
mkdir -p "$path"
cd "$path" || echo "could not be created"

if [ ! -f "today.md" ]; then
	cp "$TEMPLATE_DIR/today.template" today.md
	today_date=$(date +"%B %d, %Y")
	sed -i "s/%%today_date%%/$today_date/g" today.md
fi
