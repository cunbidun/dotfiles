#!/bin/sh

# Show wifi [W] and percent strength or [NW] if none.
# Show [E] if connected to ethernet or [NE] if none.
# Show [V] if a vpn connection is active

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="[NW] " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "[W]", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
esac

printf "^c#81A1C1^NET: ^d^%s%s%s\n" "$wifiicon" "$(sed "s/down/[NE]/;s/up/[E]/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/[V]/" /sys/class/net/tun*/operstate 2>/dev/null)"
