# Spawn terminal 
alt - return : open -n -a iTerm
alt - v: open -n -a neovide 

# Restart yabai and skhd
shift + alt - q : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Close active application
shift + alt - c : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close)

# Focus space
alt - 1 : yabai_switch_space 1
alt - 2 : yabai_switch_space 2
alt - 3 : yabai_switch_space 3
alt - 4 : yabai_switch_space 4
alt - 5 : yabai_switch_space 5
alt - 6 : yabai_switch_space 6
alt - 7 : yabai_switch_space 7
alt - 8 : yabai_switch_space 8
alt - 9 : yabai_switch_space 9

# Move window to space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7
shift + alt - 8 : yabai -m window --space 8
shift + alt - 9 : yabai -m window --space 9

# Focus window
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north

# Swap window
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north

ctrl + alt - space : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

# Focus display
alt - 0x2F : yabai -m display --focus recent # alt + period
shift + alt - 0x2F : yabai -m window --display recent # alt + period

# Layout
alt - b : yabai -m config layout bsp 
